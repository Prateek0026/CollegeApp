<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DepartmentsPage"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/lightBlue"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HeadingDepart"
            android:textColor="@color/white"
            android:textSize="20sp">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="2030dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/achievementBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/BackGround"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.573"
                    app:srcCompat="@drawable/achievement_background"
                    tools:layout_editor_absoluteX="0dp"
                    tools:srcCompat="@drawable/achievement_background">

                </ImageView>

                <TextView
                    android:id="@+id/achievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="150dp"
                    android:text="@string/DepartTitle"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/ct1"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:background="@drawable/ct"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/achievements"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>



                <TextView
                    android:id="@+id/it1"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/it2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/ct1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>



                <TextView
                    android:id="@+id/mech1"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/mech"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/it1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>

                <TextView
                    android:id="@+id/civil"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/civil"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/mech1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>

                <TextView
                    android:id="@+id/ele"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/ele"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/civil"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>

                <TextView
                    android:id="@+id/areo"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/aero"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/ele"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>

                <TextView
                    android:id="@+id/etc"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:text="@string/Ntg"
                    android:textColor="@color/white"
                    android:background="@drawable/etc"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="170dp"
                    android:paddingBottom="1dp"
                    android:layout_marginTop="280dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    app:layout_constraintTop_toTopOf="@id/areo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="76dp">

                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>